#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <iostream>
using namespace std;
#define N 4

void carica(int v[]);
void stampa(int v[]);
int *ricerca(int v[],int x);

int main(){
	srand(time(NULL));
	int vet[N];
	int a, r;
	int *puntatore;
	carica(puntatore);
	stampa(puntatore);
	cout<<"Inserisci un elemento: "<<endl;
	cin>>a;
	r=ricerca(puntatore,a);
	if(r!=NULL){
		cout<<"Il numero si trova nell'indice"<<r<<endl;
	}
	else{
		cout<<"Elemento non trovato!"<<endl;
	}
}

void carica(int v[]){
	int *p;
	for(p=v;p-v<N;p++){
		*p=50+rand()%11;
	}
}

void stampa(int v[]){
	int *p;
	for(p=v;p-v<N;p++){
		cout<<*p<<endl;
	}
}

int *ricerca(int v[],int x){
	int *p;
	for(p=v;p-v<N;p++){
		if(*p==x){
			return p;
		}
	}
	return NULL;
}
