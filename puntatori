#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define N 4

void carica(int v[]);
void stampa(int v[]);
int *ricerca2(int v[],int x);

int main()
{
	srand(time(NULL));
	int vet[N];
	int a,b,r;
	int *r;
	carica(vet);
	stampa(vet);
	printf("\n");
	printf("Inserisci un elemento: ");
	scanf("%d",&a);
	r=ricerca(vet,a);
	printf("\n");
	if(r>=0){
		printf("indirizzo elemento: %ld\n",r);
	}
	else{
		printf("Elemento non trovato!\n");
	}
}

void carica(int v[])
{
	int *p;
	for(p=v;p-v<N;p++){
		*p=50+rand()%11;
	}
}

void stampa(int v[])
{
	int *p;
	for(p=v;p-v<N;p++)
	{
		printf("\n");
		printf("Elemento in posizione %d: %d\n",p-v,*p);
	}
}

int *ricerca(int v[],int x)
