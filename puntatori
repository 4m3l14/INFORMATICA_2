#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <iostream>
#define N 4

void carica(int v[]);
void stampa(int v[]);
int *ricerca(int v[],int x);

int main(){
	srand(time(NULL));
	int vet[N];
	int a;
	int *puntatore;
	carica(vet);
	stampa(vet);
	cout<<endl;
	cout<<"Inserisci un elemento: "<<endl;
	cin>>"%d",&a>>;
	puntatore=ricerca(vet,a);
	cout<<endl;
	if(puntatore>=0){
		cout<<"indirizzo elemento: %ld"<<puntatore<<endl;
	}
	else{
		cout<<"Elemento non trovato!"<<endl;
	}
}

void carica(int v[]){
	int *p;
	for(p=v;p-v<N;p++){
		*p=50+rand()%11;
	}
}

void stampa(int v[]){
	int *p;
	for(p=v;p-v<N;p++){
		cout<<"\n"<<;
		cout<<"Elemento in posizione %d: %d"<<p-v,*p<<endl;
	}
}

int *ricerca(int v[],int x){
	int *p;
	for(p=v;p-v<N;p++){
		if(*p==x){
			return p;
		}
	}
	return NULL;
}
